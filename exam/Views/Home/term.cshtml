
@{
    /**/

    ViewBag.Title = "term";
    Layout = "~/Views/MasterPages/master1.cshtml";
}

<h2 class="text-center">Term(Exam) Grading</h2>


@using (@Html.BeginForm("term", "Home", FormMethod.Post, new { name = "frm" }))
{
    <div class="form-group table-responsive container">
        <table class="table table-striped table-hover table-dark mt-4">
            <tr>
                <td>
                    <label>Term(Exam) :</label>
                    @Html.TextBox("term", null, new { @class = "form-control", placeholder = "Term(Exam)", type = "text" })
                </td>

                <td>
                    <label>Min% :</label>
                    @Html.TextBox("min", null, new { @class = "form-control", placeholder = "Min%", required = "required", type = "text", })
                </td>
                <td>
                    <label>Max% :</label>
                    @Html.TextBox("max", null, new { @class = "form-control", placeholder = "Max%", required = "required", type = "text", })
                </td>
                <td>
                    <label>Grade :</label>
                    @Html.TextBox("grade", null, new { @class = "form-control", placeholder = "Grade", required = "required", type = "text", })
                </td>
                <td class="align-middle">
                    @Html.TextBox("button", "Add", new { @class = "btn-block btn-danger mt-4", type = "submit" })
                </td>
            </tr>
        </table>
    </div>
}

