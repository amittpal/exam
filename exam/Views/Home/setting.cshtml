
@{
    ViewBag.Title = "setting";
    Layout = "~/Views/MasterPages/master1.cshtml";
}
@{
    var assesment = new List<SelectListItem>()
{
new SelectListItem() {Value="",Text="Select Assesment" },
new SelectListItem() {Value="fa1",Text="F.A.1" },
new SelectListItem() {Value="fa2",Text="F.A.2" },
new SelectListItem() {Value="fa3",Text="F.A.3" }
};
}
<h2 class="text-center">Class Setting</h2>

@using (@Html.BeginForm("setting", "Home", FormMethod.Post, new { name = "frm" }))
{
    <div class="form-group table-responsive container form-inline">
        <table class="table table-striped table-hover table-bordered table-dark mt-4 text-center">
            <tr>
                <td colspan="4">
                    <div class="input-group col-sm-4 mx-auto">
                        @Html.TextBox("term", null, new { @class = "form-control", required = "required", placeholder = "Class", type = "text" })
                        <div class="input-group-append">
                            @Html.TextBox("button", "New", new { @class = "btn btn-danger", type = "submit" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Assesment</label>
                    @Html.DropDownList("assesment", assesment, new { @class = "form-control", required = "required" })
                </td>
                <td>
                    <label>Subject</label>
                    @Html.TextBox("button", null, new { @class = "form-control", required = "required", type = "text", placeholder = "Subject" })
                </td>
                <td>
                    <label>Max-Marks</label>
                    @Html.TextBox("button", null, new { @class = "form-control", required = "required", type = "text", placeholder = "Max-Marks" })
                </td>
                <td class="align-bottom">
                    @Html.TextBox("button", "Add", new { @class = "btn btn-danger", type = "Submit" })
                </td>
            </tr>
        </table>
    </div>
}

